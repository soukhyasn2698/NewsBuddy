{
    "manifest_version": 3,
    "name": "News Summarizer",
    "version": "1.0.0",
    "description": "Summarize news articles using Gemini Nano AI",
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.bbc.com/*",
        "https://www.npr.org/*",
        "https://feeds.bbci.co.uk/*",
        "https://www.nytimes.com/*",
        "https://rss.nytimes.com/*",
        "https://www.nbcnews.com/*",
        "https://feeds.nbcnews.com/*",
        "https://www.foxnews.com/*",
        "https://moxie.foxnews.com/*",
        "https://api.allorigins.win/*",
        "https://corsproxy.io/*",
        "https://feeds.npr.org/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "News Summarizer"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-scripts/newsFetcher.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "utils/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "trial_tokens": [
